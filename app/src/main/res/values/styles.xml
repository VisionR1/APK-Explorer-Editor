<resources>
    <style name="AppTheme" parent="Theme.Material3.DynamicColors.DayNight.NoActionBar">
        <item name="windowNoTitle">true</item>
        <item name="android:textDirection">locale</item>
        <item name="android:textAlignment">gravity</item>
        <item name="android:statusBarColor">?android:attr/statusBarColor</item>
    </style>

    <style name="AppTheme.Title" parent="AppTheme">
        <item name="android:textSize">25sp</item>
        <item name="android:gravity">start|center</item>
        <item name="android:layout_gravity">start|center</item>
        <item name="android:textColor">?attr/colorPrimary</item>
        <item name="android:textIsSelectable">false</item>
        <item name="android:textStyle">bold</item>
    </style>
</resources>